<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Energy Use Columns -->
    <style name="AppTheme.Col.EnergyUse.RadioButton" parent="@style/Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_weight">0.8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Hour" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_weight">1.4</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Duration" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Wh" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Kwh" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Cost" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
