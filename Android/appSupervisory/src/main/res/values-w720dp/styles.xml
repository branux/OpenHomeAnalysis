<resources>

    <!-- Energy Use Columns para telas igual ou superior a 720dp -->
    <style name="AppTheme.Col.EnergyUse.RadioButton" parent="@style/Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_weight">0.8</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Hour" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Duration" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Wh" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Kwh" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.Col.EnergyUse.Cost" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <!-- Energy Use Columns Titles para telas igual ou superior a 720dp -->
    <style name="AppTheme.Col.Title.EnergyUse.Hour" parent="@style/AppTheme.Col.EnergyUse.Hour">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Col.Title.EnergyUse.Duration" parent="@style/AppTheme.Col.EnergyUse.Duration">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Col.Title.EnergyUse.Wh" parent="@style/AppTheme.Col.EnergyUse.Wh">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Col.Title.EnergyUse.Kwh" parent="@style/AppTheme.Col.EnergyUse.Kwh">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Col.Title.EnergyUse.Cost" parent="@style/AppTheme.Col.EnergyUse.Cost">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
